apiVersion: extensions/v1beta1
kind:       Deployment
metadata:
  name: concent-api
spec:
  replicas:             1
  revisionHistoryLimit: 2
  template:
    metadata:
      labels:
        run: concent-api
    spec:
      containers:
        - name:             concent-api
          image:            {{ docker_registry }}/concent-api:latest
          imagePullPolicy:  Always
          ports:
            - containerPort: 80
          resources:
            requests:
              memory: "0.5Gi"
              cpu:    "50m"
            limits:
              memory: "1Gi"
              cpu:    "800m"
---
apiVersion: v1
kind:       Service
metadata:
  name: concent-api
  labels:
    run: concent-api
spec:
  type: ClusterIP
  ports:
    - port:       80
      targetPort: 80
      name:       concent-api-port
  selector:
    run: concent-api
