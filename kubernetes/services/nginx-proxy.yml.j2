apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nginx-proxy
spec:
  replicas:             2
  revisionHistoryLimit: 2
  template:
    metadata:
      labels:
        run: nginx-proxy
    spec:
      containers:
        - image:           {{ docker_registry }}/{{ image_prefix }}nginx-proxy:{{ image_version }}
          name:            nginx
          imagePullPolicy: Always
          resources:
            requests:
              memory: "100Mi"
              cpu:    "200m"
            limits:
              memory: "512Mi"
              cpu:    "600m"
          lifecycle:
            preStop:
              exec:
                command: ["/usr/sbin/nginx", "-s", "quit"]
          volumeMounts:
            - mountPath:  /etc/nginx/conf.d/
              name:       nginx-configs
              readOnly:   true
            - mountPath:  /etc/nginx/snippets/
              name:       nginx-config-snippets
              readOnly:   true
            {% if nginx_proxy_ssl %}
            - mountPath:  /etc/ssl/secrets/
              name:       nginx-proxy-secrets
              readOnly:   true
            {% endif %}
      volumes:
        -  name: nginx-configs
           configMap:
             name: nginx-configs
        {% if nginx_proxy_ssl %}
        - name: nginx-proxy-secrets
          secret:
            secretName:  nginx-proxy-secrets
            defaultMode: 0600
        {% endif %}
        -  name: nginx-config-snippets
           configMap:
             name: nginx-config-snippets
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-proxy
spec:
  type:           LoadBalancer
  loadBalancerIP: {{ external_ip }}
  ports:
    - name:       http
      protocol:   TCP
      port:       80
      targetPort: 80
    {% if nginx_proxy_ssl %}
    - name:       https
      protocol:   TCP
      port:       443
      targetPort: 443
    {% endif %}
  selector:
    run: nginx-proxy
